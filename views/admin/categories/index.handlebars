<h1> Categories</h1>

<div class="row">
    <div class="col-sm-4">
        <form action="/admin/categories/create" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" placeholder="Enter title" name="name" class="form-control"> 
        </div>
         <button class="btn btn-primary">Create Categories</button>
        </form>
      
    </div>
    <div class="col-sm-8">
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                  
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                  <td>{{id}}</td>
                  <td>{{name}}</td>
                  <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info" >Edit</a></td>
                  <td><form action="/admin/categories/{{id}}/?_method=DELETE" method="POST">
                  <button class="btn btn-danger"> Delete</button>

                  </form></td>
                  
              </tr>
                {{/each}}
              
            </tbody>
        </table>
    </div>
</div>