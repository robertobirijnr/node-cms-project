<h1>Create Post</h1>

<form action="/api/admin/posts/create" method="POST" enctype="multipart/form-data">

<div class="form-group">
    <label for="title">Tittle</label>
    <input type="text" name="title" class="form-control" id="title" placeholder="Enter title" required>
</div>

<div class="form-group">
    <label for="file">File Upload</label>
    <input type="file" name="file" class="form-control" required>
</div>
<div class="form-group">
    <label for="category">Categories</label>
    <select name="category" id="category" class="form-control">
       
         {{#each categories}}
       <option  value="{{id}}">{{name}}</option>
       {{/each}}
      
    </select>
</div> 
<div class="form-group">
    <label for="status">Status</label>
    <select name="status" id="status" class="form-control">
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>
    </select>
</div>

<div class="form-check">
    <label for="allowComment" class="form-check-label">
    <input class="form-check-input" id="allowComments" name="allowComments" type="checkbox" required >
      Allow Comments
    </label>
</div> 
<div class="form-group">
    <label for="body">Description</label>
    <textarea  name="body" class="form-control" cols="30" rows="10" id="body" placeholder="Enter Description" required></textarea>
</div>
<button class="btn btn-primary" type="submit">Create Post</button>
</form>