<h1>Edit Post</h1>

<form action="/api/admin/posts/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

<div class="form-group">
    <label for="title">Tittle</label>
    <input type="text" name="title" class="form-control" id="title" value="{{post.title}}">
</div>
<div class="form-group">
    <label for="file">File Upload</label>
    <input type="file" name="file" class="form-control" required>
</div>
<div class="form-group">
    <label for="status">Status</label>
    <select name="status" id="status" class="form-control">
        {{#select post.status}}
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>
        {{/select}}
    </select>
</div>
<div class="form-group">
    <label for="status">Categories</label>
    <select name="category" id="category" class="form-control">
       {{#select post.category}}
       {{#each categories}}
            <option value="{{id}}">{{name}}</option>
       {{/each}}
       {{/select}}
 
    </select>
</div>

<div class="form-check">
    <label for="allowComment" class="form-check-label">
    <input class="form-check-input" id="allowComments" {{#if post.allowComments}} checked="checked" {{/if}} name="allowComments" type="checkbox" >
      Allow Comments
    </label>
</div> 
<div class="form-group">
    <label for="body">Description</label>
    <textarea  name="body" class="form-control" cols="30" rows="10" id="body">{{post.body}}</textarea>
</div>
<button class="btn btn-primary" type="submit">Update Post</button>
</form>